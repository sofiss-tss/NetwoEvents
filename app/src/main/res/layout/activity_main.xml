<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_up"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/bg1">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:src="@drawable/ne1"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginLeft="180sp"
            android:backgroundTint="@color/bg"
            android:text="@string/Login"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_up"
        android:fontFamily="@font/montserrat_thin"
        android:text="@string/text"
        android:textColor="@color/black"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="270sp"
        android:layout_below="@+id/text"
        android:layout_marginTop="160sp"
        android:src="@drawable/p2"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/question"
        android:layout_below="@id/picture"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/question"
        android:layout_marginLeft="320sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture"
        android:fontFamily="@font/montserrat_thin"
        android:text="@string/question"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="130sp"
        android:textSize="25sp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/downLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/question"
        android:orientation="vertical">



        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginLeft="190sp"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginLeft="190sp"
            android:hint="@string/editText"/>
        <Button
            android:layout_marginLeft="190sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:backgroundTint="@color/purple_700"
            android:text="@string/resume"
            android:textColor="@color/white"/>


    </LinearLayout>


</RelativeLayout>
